{
    "name": "HyRead圖書館註記匯出",
    "description": "在HyRead圖書館服務的裡面增加註記匯出功能",
    "version": "0.4.5",
    "manifest_version": 3,
    "options_ui": {
        "page": "dist/options/options_vue.html",
        "open_in_tab": true
    },
    "background": {
        "service_worker": "dist/background-bundle.js"
    },
    "host_permissions": [
        "https://readwise.io/api/v3/*",
        "https://*.ebook.hyread.com.tw/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.ebook.hyread.com.tw/*"
            ],
            "all_frames": true,
            "js": [
                "dist/content-script-bundle.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "downloads",
        "tabs"
    ]
}
